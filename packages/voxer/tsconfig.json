{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "lib",
    "declaration": true,
    "outDir": "./dist",
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/lib/**/*.ts", "src/runtime/**/*.ts"],
  "exclude": ["src/runtime/preload.ts", "**/__test__.ts"]
}
