// this configurations file will be locate into .voxer
// and extended by src/tsconfig.json
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "Node"
  },
  "include": [
    "node_modules/voxer/src/runtime/preload.ts",
    "node_modules/voxer/src/runtime/injectable.ts",
    "node_modules/voxer/src/runtime/core/types.ts",
    "node_modules/voxer/src/runtime/core/utils.ts",
    "node_modules/voxer/src/runtime/core/voxer.renderer.ts",
    "../src/preload.*",
    "../src/preload/*"
  ]
}
